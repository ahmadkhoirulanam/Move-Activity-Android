<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context=".MoveForActivity">

    <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dbeceb"
            android:padding="@dimen/activity_vertical_margin">
        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Jurusan"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <RadioButton
                android:id="@+id/rb_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMATIKA"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <RadioButton
                android:id="@+id/rb_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEKNIK MESIN"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <RadioButton
                android:id="@+id/rb_150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEKNIK SIPIL"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <RadioButton
                android:id="@+id/rb_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEKNOLOGI PANGAN"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    </RadioGroup>


</RelativeLayout>

